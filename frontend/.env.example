# =====================================================
# SYSME POS - Environment Variables Example
# =====================================================
# Copy this file to .env and update values
# =====================================================

# ====================================
# APPLICATION
# ====================================
NODE_ENV=development
# NODE_ENV=production

# ====================================
# SERVER
# ====================================
PORT=3000
HOST=0.0.0.0

# ====================================
# DATABASE
# ====================================
# SQLite (Development)
DATABASE_URL=sqlite:///data/database.db

# PostgreSQL (Production - Uncomment if using)
# DATABASE_URL=postgresql://sysmepos:password@localhost:5432/sysmepos

# ====================================
# AUTHENTICATION
# ====================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=10

# ====================================
# CORS
# ====================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
# FRONTEND_URL=https://yourdomain.com

# ====================================
# REDIS (Optional - for caching)
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sysme-redis-password
REDIS_DB=0

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=info
# LOG_LEVEL=debug  # Use in development
# LOG_LEVEL=error  # Use in production

LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# ====================================
# FILE UPLOADS
# ====================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ====================================
# EMAIL (Optional - for password reset)
# ====================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# EMAIL_FROM=noreply@sysmepos.com

# ====================================
# DELIVERY PLATFORMS API KEYS
# ====================================
# Uber Eats
UBER_EATS_API_KEY=your-uber-eats-api-key
UBER_EATS_API_SECRET=your-uber-eats-api-secret
UBER_EATS_MERCHANT_ID=your-merchant-id
UBER_EATS_STORE_ID=your-store-id

# Rappi
RAPPI_API_KEY=your-rappi-api-key
RAPPI_API_SECRET=your-rappi-api-secret
RAPPI_MERCHANT_ID=your-merchant-id

# PedidosYa
PEDIDOSYA_API_KEY=your-pedidosya-api-key
PEDIDOSYA_API_SECRET=your-pedidosya-api-secret
PEDIDOSYA_RESTAURANT_ID=your-restaurant-id

# ====================================
# PAYMENT GATEWAYS (Optional)
# ====================================
# Stripe
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLIC_KEY=pk_test_...

# PayPal
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# PAYPAL_MODE=sandbox  # or 'live'

# ====================================
# MONITORING & ERROR TRACKING
# ====================================
# Sentry
# SENTRY_DSN=https://...@sentry.io/...

# New Relic
# NEW_RELIC_LICENSE_KEY=your-license-key
# NEW_RELIC_APP_NAME=SYSME-POS

# ====================================
# ANALYTICS
# ====================================
# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Login rate limit (more restrictive)
LOGIN_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ====================================
# SESSION
# ====================================
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT_MS=3600000  # 1 hour

# ====================================
# SECURITY
# ====================================
# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-characters-min

# HTTPS (Production)
HTTPS_ENABLED=false
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem

# ====================================
# BACKUP
# ====================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ====================================
# FRONTEND ENVIRONMENT
# ====================================
VITE_API_URL=http://localhost:3000/api
# VITE_API_URL=https://api.yourdomain.com/api

VITE_APP_NAME=SYSME POS
VITE_APP_VERSION=2.1.0
VITE_ENV=development

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_LOYALTY_PROGRAM=true
ENABLE_DELIVERY_INTEGRATION=true
ENABLE_RECIPE_SYSTEM=true
ENABLE_RESERVATIONS=true
ENABLE_ANALYTICS=true

# ====================================
# MAINTENANCE MODE
# ====================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. We'll be back soon!"

# ====================================
# TIMEZONE
# ====================================
TZ=America/Santiago
# TZ=America/New_York
# TZ=America/Los_Angeles

# ====================================
# LOCALE
# ====================================
DEFAULT_LANGUAGE=es
# DEFAULT_LANGUAGE=en

DEFAULT_CURRENCY=CLP
# DEFAULT_CURRENCY=USD

# ====================================
# PERFORMANCE
# ====================================
# Node.js memory limit
NODE_OPTIONS=--max-old-space-size=4096

# Enable clustering (multi-core)
CLUSTER_ENABLED=false
CLUSTER_WORKERS=4  # or 'auto' for CPU count

# ====================================
# DEVELOPMENT TOOLS
# ====================================
# Enable debug mode
DEBUG=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# Enable API request logging
LOG_API_REQUESTS=true

# ====================================
# END OF FILE
# ====================================
# Remember to add .env to .gitignore!
