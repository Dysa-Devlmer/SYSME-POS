# SYSME 2.0 - Production Environment Configuration
NODE_ENV=production
PORT=4001

# Database Configuration - SQLite Production Optimized
DB_TYPE=sqlite
DB_PATH=./data/sysme_production.db

# Security
JWT_SECRET=sysme2024_jwt_secret_key_production_very_secure_32chars_minimum
JWT_REFRESH_SECRET=sysme2024_refresh_secret_key_production_very_secure_32chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4173,https://localhost:4173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sysme-production.log

# File Upload
UPLOAD_DIR=./uploads/production
MAX_FILE_SIZE=5242880

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
