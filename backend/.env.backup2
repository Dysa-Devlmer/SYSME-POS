# Fecha: 25 de Octubre de 2025
# Versión: 2.0.0 Production
NODE_ENV=production
PORT=47851
BACKEND_PORT=47851

# Database Configuration - SQLite Production Optimized
DB_TYPE=sqlite
DB_PATH=./data/sysme_production.db
DB_BACKUP_PATH=./backups/sysme_production_backup.db
# MySQL Configuration (for future migration)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=sysme_production
# DB_USER=sysme_user
# DB_PASSWORD=SysmeSecure2024!

# Source Database for Migration
SOURCE_DB_PATH=./data/sysme.db

# Security
JWT_SECRET=sysme2024_jwt_secret_key_production_very_secure_32chars_minimum
JWT_REFRESH_SECRET=sysme2024_refresh_secret_key_production_very_secure_32chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration - Puertos Seguros
CORS_ORIGIN=http://127.0.0.1:8080,http://localhost:8080,http://127.0.0.1:23847,http://localhost:23847
FRONTEND_URL=http://127.0.0.1:8080
FRONTEND_PORT=8080

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sysme-production.log

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Server Configuration
TRUST_PROXY=true
COOKIE_SECURE=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Health Check
HEALTH_CHECK_ENDPOINT=/health
