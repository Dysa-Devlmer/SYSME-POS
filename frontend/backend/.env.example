# =====================================================
# SYSME POS Backend - Environment Configuration
# =====================================================
# Copy this file to .env and update with your values

# =====================================================
# Server Configuration
# =====================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_NAME=SYSME POS
APP_VERSION=2.1.0

# =====================================================
# Database Configuration
# =====================================================
DATABASE_URL=./database.sqlite
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h
DATABASE_BACKUP_RETENTION=7

# =====================================================
# JWT Authentication
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=sysme-pos

# =====================================================
# Security
# =====================================================
# BCrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=10

# Session secret
SESSION_SECRET=your-session-secret-CHANGE-THIS

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CORS Configuration
# =====================================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# =====================================================
# Features Flags
# =====================================================
ENABLE_LOYALTY_PROGRAM=true
ENABLE_DELIVERY_INTEGRATION=true
ENABLE_RESERVATIONS=true
ENABLE_RECIPES=true
ENABLE_ANALYTICS=true

# =====================================================
# Logging Configuration
# =====================================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true

# =====================================================
# Monitoring & Observability
# =====================================================
# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENABLED=false
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
METRICS_ENABLED=true

# =====================================================
# Email Configuration (optional)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@sysme-pos.com

# =====================================================
# File Upload
# =====================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =====================================================
# External Integrations
# =====================================================
# Payment Gateway (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Delivery Platforms
UBER_EATS_API_KEY=
RAPPI_API_KEY=
DIDI_FOOD_API_KEY=

# SAT/CFDI (Mexico invoicing)
SAT_RFC=
SAT_CERTIFICATE_PATH=
SAT_PRIVATE_KEY_PATH=
SAT_ENABLED=false

# =====================================================
# Development Settings
# =====================================================
# API request logging in development
LOG_API_REQUESTS=true

# Seed database with sample data
SEED_SAMPLE_DATA=true

# Enable development tools
DEV_TOOLS_ENABLED=true

# =====================================================
# Maintenance Mode
# =====================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema en mantenimiento. Volveremos pronto.
