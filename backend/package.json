{
  "name": "sysme-backend",
  "version": "2.0.0",
  "description": "SYSME 2.0 Backend API Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step needed for JS'",
    "start": "NODE_ENV=production node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "start:dev": "NODE_ENV=development nodemon src/server.js",
    "init-db": "node src/database/init.js",
    "setup": "npm install && npm run init-db",
    "setup:prod": "node src/scripts/setup-production.js",
    "migrate:mysql": "node src/scripts/migrate-to-mysql.js",
    "backup:create": "node src/scripts/backup-database.js create",
    "backup:list": "node src/scripts/backup-database.js list",
    "backup:clean": "node src/scripts/backup-database.js clean",
    "backup:schedule": "node src/scripts/backup-database.js schedule",
    "backup:test": "node src/scripts/backup-database.js test",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "validate:production": "node src/scripts/validate-production.js",
    "setup:mysql-dev": "node src/scripts/setup-mysql-dev.js",
    "test:mysql": "node src/scripts/test-mysql-connection.js",
    "status": "node src/scripts/system-status.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "echo 'Linting not configured yet'"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "twilio": "^4.19.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
