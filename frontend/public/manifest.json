{
  "name": "SYSME - Sistema de Restaurante",
  "short_name": "SYSME POS",
  "description": "Sistema POS completo para restaurantes - Gestión de mesas, cocina, inventario y ventas",
  "version": "2.0.1",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "lang": "es-ES",
  "dir": "ltr",

  "icons": [
