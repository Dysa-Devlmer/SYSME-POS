{
  "name": "sysme-2.0",
  "version": "2.0.0",
  "description": "SYSME TPV 2.0 - Sistema Profesional de Punto de Venta para Restaurantes",
  "main": "desktop/main.js",
  "scripts": {
    "start": "npm run electron",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build:desktop": "electron-builder",
    "dist": "npm run build:desktop",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd dashboard-web && npm run dev",
    "dev:mobile": "cd dashboard-mobile && npm run dev",
    "build": "npm run build:backend && npm run build:web && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd dashboard-web && npm run build",
    "build:mobile": "cd dashboard-mobile && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && npm test",
    "test:web": "cd dashboard-web && npm test",
    "lint": "npm run lint:backend && npm run lint:web && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd dashboard-web && npm run lint",
    "lint:mobile": "cd dashboard-mobile && npm run lint",
    "start:staging": "NODE_ENV=staging npm run dev",
    "start:production": "NODE_ENV=production npm start",
    "setup:staging": "./SETUP_STAGING_ENVIRONMENT.sh",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "clean": "rm -rf */node_modules && rm -rf */dist"
  },
  "build": {
    "appId": "com.sysme.tpv",
    "productName": "SYSME TPV 2.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop/**/*",
      "waiter-interface.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "desktop/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "pos",
    "restaurant",
    "tpv",
    "point-of-sale",
    "hosteleria"
  ],
  "author": {
    "name": "SYSME",
    "email": "info@sysme.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dysa-projects/sysme-2.0.git"
  }
}
